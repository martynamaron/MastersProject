<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9c9c9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    tools:context="com.example.obstructiveinterface.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textSize="30dp" />

    <!--  attach button -->

    <Button
        android:id="@+id/btn_attach"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="@string/btn_attach"
        android:textColor="#ffffff" />

    <!--  email address input line -->

   <!-- email subject input line -->

    <!--  send button -->

    <!--  email body text field -->

    <EditText
        android:id="@+id/email_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_subject"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="#ffffff"
        android:ems="15"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/email_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_body"
        android:layout_alignLeft="@+id/email_address"
        android:layout_marginBottom="16dp"
        android:ems="15"
        android:hint="@string/btn_esubject" />

    <EditText
        android:id="@+id/email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_subject"
        android:layout_alignLeft="@+id/btn_attach"
        android:ems="15"
        android:hint="@string/btn_eaddress"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_attach"
        android:layout_alignBottom="@+id/btn_attach"
        android:layout_alignRight="@+id/email_address"
        android:text="@string/btn_send"
        android:textStyle="bold" />

</RelativeLayout>